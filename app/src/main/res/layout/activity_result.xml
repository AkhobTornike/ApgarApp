                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#4E1077"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights,VisualLintOverlap, MissingConstraints" />

                    <TextView
                        android:id="@+id/MuscleToneScore3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#4E1077"
                        android:textSize="16sp"
                        tools:ignore="VisualLintOverlap, MissingConstraints" />

                    <TextView
                        android:id="@+id/ReflexScore3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#4E1077"
                        android:textSize="16sp"
                        tools:ignore="VisualLintOverlap, MissingConstraints" />

                    <TextView
                        android:id="@+id/HeartRateScore3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
