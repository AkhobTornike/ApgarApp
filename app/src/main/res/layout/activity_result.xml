                    android:id="@+id/Score2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints,NestedWeights,RtlHardcoded,TextSizeCheck">

                    <TextView
                        android:id="@+id/RespiratoryScore2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#4E1077"
                        android:textSize="16sp"
                        tools:ignore="NestedWeights,VisualLintOverlap, MissingConstraints" />

                    <TextView
                        android:id="@+id/MuscleToneScore2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#4E1077"
                        android:textSize="16sp"
                        tools:ignore="VisualLintOverlap, MissingConstraints" />

                    <TextView
                        android:id="@+id/ReflexScore2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#4E1077"
                        android:textSize="16sp"
                        tools:ignore="VisualLintOverlap, MissingConstraints" />

                    <TextView
                        android:id="@+id/HeartRateScore2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:textColor="#4E1077"
                        android:textSize="16sp"
                        tools:ignore="VisualLintOverlap, MissingConstraints" />

                    <TextView
